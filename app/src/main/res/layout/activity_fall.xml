<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="5dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="35dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_weight=".17"
            android:text="@string/ui_title_fall_activity"/>

        <TextView
            android:id="@+id/fallTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="@color/darkred"
            android:text="@string/ui_title_fall_time"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/FallBtnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="@string/ui_OK_Btn"
            android:background="@drawable/green_button"
            android:layout_marginBottom="10dp"
            android:onClick="onFallOkClicked"/>

        <Button
            android:id="@+id/FallBtnHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="@string/ui_HELP_Btn"
            android:background="@drawable/red_button"
            android:onClick="onFallHelpClicked"/>
    </LinearLayout>
</LinearLayout>
